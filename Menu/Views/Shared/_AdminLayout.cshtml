
@{
    Layout = null;
}

   
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>Yönetici Ekranı</title>


        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
        <link href="~/startbootstrap-admin/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" asp-controller="Admin" asp-action="Index">Yönetici Ekranı</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="dropdown-item fw-bold">@User.Identity.Name</a></li>
                        <li><a class="dropdown-item" asp-controller="Settings" asp-action="Index">Ayarlar</a></li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Register">Yeni Kayıt</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="LogOut">Çıkış</a></li>
                    }
                    else{
                        <li><a class="dropdown-item fw-bold">@User.Identity.Name</a></li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Login">Giriş</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="LogOut">Çıkış</a></li>

                    }
                    
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">AnaSayfa Ayarları</div>
                            <a class="nav-link" asp-controller="About" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="bi bi-file-person"></i></div>
                            Hakkında
                            </a>
                        <a class="nav-link" asp-controller="Gallery" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-images"></i></div>
                                Galeri
                            </a>
                        <a class="nav-link" asp-controller="Contact" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-rolodex"></i></div>
                                İletişim
                            </a>

                            <div class="sb-sidenav-menu-heading">MENÜ</div>
                        <a class="nav-link" asp-controller="Category" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-bookmarks"></i></div>
                                Kategori

                            </a>

                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-bag-dash"></i></div>
                                Ürünler
                            </a>
                        <a class="nav-link" asp-controller="Message" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-bag-dash"></i></div>
                            Mesajlar
                        </a>
                            
                            <div class="sb-sidenav-menu-heading">KULLANICI</div>
                            <a class="nav-link" asp-controller="admin" asp-action="userlist">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                Kullanıcı İşlemleri
                            </a>
                        <a class="nav-link" asp-controller="Settings" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Şifre İşlemleri
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
       <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                 @RenderBody()
            </div>
        </main>
        </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/startbootstrap-admin/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="~/startbootstrap-admin/assets/demo/chart-area-demo.js"></script>
        <script src="~/startbootstrap-admin/assets/demo/chart-bar-demo.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="~/startbootstrap-admin/js/datatables-simple-demo.js"></script>

    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />

    </body>
</html>
