@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



        <h4 class="card-title"> Hakkında </h4>

            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Hakkında</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
                 
                @foreach (var item in Model)
                {
                     <tr>
                        <td>@item.Id</td>
                        <td class="py-1">
                        <img src="~/alkutay/images/@item.Image" width="50" height="50" />
                        </td>
                        <td>@item.Text</td>
                        <td>
                    <a href="/About/DeleteAbout/@item.Id" class="btn btn-outline-danger">Sil</a>
                        </td>
                        <td>
                    <a href="/About/UpdateAbout/@item.Id" class="btn btn-outline-success">Güncelle</a>
                        </td>
                    </tr>
                }
             </table>
                <br />
        <a href="/About/AddAbout" class="btn btn-outline-primary"> Hakkında Girişi</a>
